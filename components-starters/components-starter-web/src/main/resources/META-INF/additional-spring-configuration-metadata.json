    },
    {
      "sourceType": "com.zoe.framework.components.starter.web.configuration.GlobalExceptionProperties",
      "name": "全局异常处理",
      "type": "com.zoe.framework.components.starter.web.configuration.GlobalExceptionProperties"
    }
  ],
  "properties": [
    {
      "name": "server.shutdown.task.path",
