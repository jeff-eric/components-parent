    },
    {
      "name": "server.status.path",
      "type": "java.lang.String",
      "description": "服务状态事件请求地址.",
      "defaultValue": "/event/status/up"
    },
    {
      "name": "zoe.response.config.enable",
      "type": "java.lang.Boolean",
